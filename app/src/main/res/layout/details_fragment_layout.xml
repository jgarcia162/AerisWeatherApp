<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/day_of_the_week_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        tools:text="MONDAY" />
    <RelativeLayout
        android:id="@+id/day_detail_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/day_of_the_week_tv"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp">

        <ImageView
            android:id="@+id/weather_icon_iv"
            android:layout_width="75dp"
            android:layout_height="75dp"
            tools:src="@drawable/sunny" />

        <TextView
            android:id="@+id/weather_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weather_icon_iv"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            tools:text="Sunny" />
        <TextView
            android:id="@+id/detail_max_temp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/weather_icon_iv"
            android:layout_toEndOf="@id/weather_icon_iv"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            tools:text="High 43 F"/>
        <TextView
            android:id="@+id/detail_min_temp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/weather_icon_iv"
            android:layout_toEndOf="@id/weather_icon_iv"
            android:layout_below="@id/detail_max_temp_tv"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            tools:text="Low 27 F"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/details_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/day_detail_relative_layout"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/sunrise_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sunrise_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:textSize="17sp"
                android:textColor="@color/white"
                tools:text="Sunrise - 6:34"/>
            <TextView
                android:id="@+id/sunset_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:textSize="17sp"
                android:textColor="@color/white"
                tools:text="Sunset - 4:34"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/weather_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:text="Mostly cloudy with light rain"/>
        <TextView
            android:id="@+id/humidity_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:textColor="@color/white"
            tools:text="Humidity - 85%"/>
        <TextView
            android:id="@+id/wind_speed_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:textColor="@color/white"
            tools:text="Wind Speed- 12 MPH"/>
        <TextView
            android:id="@+id/wind_direction_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:textColor="@color/white"
            tools:text="Wind Direction - SSW"/>
        <TextView
            android:id="@+id/uvi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:textColor="@color/white"
            tools:text="UV Index - 1"/>
    </LinearLayout>
</RelativeLayout>